#!/bin/bash
# ^ just here for syntax highlighting 
# PowerMan2206's Sway keybind config file

# set the modifier key to Win
set $mod Mod4

# start a terminal
bindsym $mod+Return exec alacritty

# stuff
bindsym $mod+q exec qutebrowser
bindsym $mod+t exec thunar

# swaylock
bindsym $mod+Shift+Space exec 'swaylock -u -i HDMI-A-1:~/walls/fake/beeg.png -i HDMI-A-2:~/walls/fake/smol.png'

# run bemenu case insensitive on the focused monitor with the colors and all
bindsym $mod+d exec bemenu-run -l 20 -n -i \
-m $(swaymsg -t get_outputs -p | grep focused | cut -d"'" -f1 | cut -d"-" -f3) \
--fn "monospace 9" \
--fb "#181b28" --nb "#181b28" --hb "#181b28" --tb "#181b28" \
--ff "#e8e7e4" --nf "#e8e7e4" --hf "#ef2f27" --tf "#ef2f27"

# screenshot stuff
bindsym --release Print exec screenshot area #select area 
bindsym --release Shift+Print exec screenshot window #focused window

### nerd shit

# pactl to control pulseaudio volume with an XF86 keyboard
bindsym XF86AudioRaiseVolume exec pamixer -i 5
bindsym XF86AudioLowerVolume exec pamixer -d 5
bindsym XF86AudioMute exec pamixer -t

# above but for mpd control
bindsym XF86AudioPlay exec mpc toggle
bindsym XF86AudioNext exec mpc next
bindsym XF86AudioPrev exec mpc prev

# fullscreen the focused container
bindsym $mod+f fullscreen toggle
# toggle tiling/floating
bindsym $mod+Space floating toggle
# drag floating windows
floating_modifier $mod
# kill focused window
bindsym $mod+Shift+q kill
bindsym Mod1+f4 kill #cursed

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in a horizontal and vertical orientation
# yeah it's switched, makes more sense this way
bindsym $mod+v split h
bindsym $mod+h split v
# toggle split
bindsym $mod+e layout toggle split

# reload the configuration file
bindsym $mod+Shift+c reload

# power menu thing
bindsym $mod+Shift+e exec swaynag -m 'select action' \
-f 'monospace 9' \
--background 181b28 --text e8e7e4 --border 181b28 \
--button-background 181b28 --button-text e8e7e4 \
--border-bottom ef2f27 --border-bottom-size 1 \
-b 'exit sway' 'swaymsg exit' \
-b 'poweroff' 'poweroff' \
-b 'reboot' 'reboot' \
-s 'x  '

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused workspace
bindsym $mod+Shift+1 move workspace $ws1
bindsym $mod+Shift+2 move workspace $ws2
bindsym $mod+Shift+3 move workspace $ws3
bindsym $mod+Shift+4 move workspace $ws4
bindsym $mod+Shift+5 move workspace $ws5
bindsym $mod+Shift+6 move workspace $ws6
bindsym $mod+Shift+7 move workspace $ws7
bindsym $mod+Shift+8 move workspace $ws8
bindsym $mod+Shift+9 move workspace $ws9
bindsym $mod+Shift+0 move workspace $ws10
