#!/bin/bash

# make this use the keyboard identifier later
case "$(swaymsg -t get_inputs | jq '.[0].xkb_active_layout_name')" in
	'"English (US)"' ) swaymsg input 2385:5842:Kingston_HyperX_Alloy_FPS_Pro_Mechanical_Gaming_Keyboard xkb_switch_layout 1 ;;
	'"Croatian"'     ) swaymsg input 2385:5842:Kingston_HyperX_Alloy_FPS_Pro_Mechanical_Gaming_Keyboard xkb_switch_layout 0 ;;
esac
