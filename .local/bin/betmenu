#!/bin/bash
# literally just a bemenu runner thing

# case insensitive on the focused monitor with the colors and all

com=bemenu

case $1 in
	run ) com=bemenu-run
esac

$com -l 20 -n -i \
-m $(swaymsg -t get_outputs -p | grep focused | cut -d"'" -f1 | cut -d"-" -f3) \
--fn "monospace 9" \
--fb "#181b28" --nb "#181b28" --hb "#181b28" --tb "#181b28" \
--ff "#e8e7e4" --nf "#e8e7e4" --hf "#ef2f27" --tf "#ef2f27"
