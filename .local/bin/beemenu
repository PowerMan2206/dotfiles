#!/bin/bash
# run bemenu case insensitive on the focused monitor with the colors and all
# I know I gotta learn jq shut up

# don't run if lockfile is present
if [[ -f /tmp/beemenu.lck ]]; then exit; fi

touch /tmp/beemenu.lck

"$1" -l 20 -n -i -p " " \
-m $(swaymsg -t get_outputs -p | grep focused | cut -d"'" -f1 | cut -d"-" -f3) \
--fn "monospace 9" \
--fb "#181b28" --nb "#181b28" --hb "#181b28" --tb "#181b28" \
--ff "#e8e7e4" --nf "#e8e7e4" --hf "#ef2f27" --tf "#ef2f27" \
$@

rm /tmp/beemenu.lck
