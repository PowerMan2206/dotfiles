#!/bin/bash

# script to upload files/do URL stuff with 0x0.st

set -e

while getopts "f:p:s:" arg; do
	case $arg in
		f | file ) curl -F file=@"$OPTARG" https://0x0.st; exit ;;
		p | post) curl -F url="$OPTARG" https://0x0.st; exit ;;
		s | short) curl -F shorten="$OPTARG" https://0x0.st; exit ;;
		*) echo "-f for files, -p for POSTing URLs, -s for shortening URLs"; exit ;;
	esac
done
