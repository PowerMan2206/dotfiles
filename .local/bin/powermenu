#!/bin/bash
# powermenu thing by PowerMan2206
# (no it's not a pun)

# kill if running
if [[ $(pidof swaynag) ]]; then
	pkill swaynag
	exit
fi

swaynag -m 'select action' \
-f 'monospace 9' \
--background 181b28 --text e8e7e4 --border 181b28 \
--button-background 181b28 --button-text e8e7e4 \
--border-bottom ef2f27 --border-bottom-size 1 \
-b 'exit sway' 'swaymsg exit' \
-b 'suspend' 'systemctl suspend' \
-b 'hibernate' 'systemctl hibernate' \
-b 'reboot' 'reboot' \
-b 'poweroff' 'poweroff' \
-s 'X   '
